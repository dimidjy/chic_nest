/**
 * Implements hook_help().
 */
function app_core_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.app_core':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Core functionality for the decoupled commerce application.') . '</p>';
      return $output;
  }
}

